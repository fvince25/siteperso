<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device.width, initial-scale=1">
    {% set titlePage = navBarMenusRepository.findOneBy({item : controller_name}).textreplace %}
    <title>{{ titlePage | raw }}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body>
    {% include 'common/_navbar.html.twig' %}

    <div class="container pt-5">
        <h1>{{ titlePage | raw }} </h1>
        {% block body %}
        {% endblock %}
    </div>

    {% if (not app.request.cookies.get('tokenSite')) %}
        {% include 'common/_cookie_consent.html.twig' %}
    {% endif %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>
